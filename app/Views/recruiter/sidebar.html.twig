                </li>
            </ul>
        </div>

        <div>
            <h3 class="px-4 text-xs font-semibold text-slate-400 uppercase tracking-wider mb-3">Company</h3>
            <ul class="space-y-1">
                <li>
                    <a href="/recruiter/company" class="flex items-center gap-3 px-4 py-3 rounded-xl transition-colors font-medium {{ macros.isActive(app.request.uri, '/recruiter/company') }}">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
