{# Helper macro to check active link #}
{% macro isActive(uri, path) %}
    {{ uri starts with path ? 'bg-indigo-50 text-indigo-600' : 'text-slate-500 hover:bg-slate-50 hover:text-slate-900' }}
{% endmacro %}

{% import _self as macros %}

<aside class="w-64 bg-white border-r border-slate-100 flex flex-col hidden md:flex transition-all duration-300">
    <div class="h-20 flex items-center px-8 border-b border-slate-50">
        <div class="flex items-center gap-3">
            <div class="w-8 h-8 bg-indigo-600 rounded-lg flex items-center justify-center text-white font-bold text-lg">
                T
            </div>
            <span class="text-xl font-bold text-slate-800 tracking-tight">TalentHub</span>
        </div>
    </div>

    <nav class="flex-1 overflow-y-auto py-6 px-4 space-y-8">
        
        <div>
            <h3 class="px-4 text-xs font-semibold text-slate-400 uppercase tracking-wider mb-3">Recruitment</h3>
            <ul class="space-y-1">
                <li>
                    <a href="/recruiter/dashboard" class="flex items-center gap-3 px-4 py-3 rounded-xl transition-colors font-medium {{ macros.isActive(app.request.uri, '/recruiter/dashboard') }}">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"></path>
