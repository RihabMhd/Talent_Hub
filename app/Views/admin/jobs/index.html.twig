<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<title>Manage Jobs | TalentHub</title>
		<meta name="viewport" content="width=device-width, initial-scale=1">

		<script src="https://cdn.tailwindcss.com"></script>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

		<style>
			body {
				font-family: 'Inter', sans-serif;
			}
			::-webkit-scrollbar {
				width: 6px;
			}
			::-webkit-scrollbar-track {
				background: transparent;
			}
			::-webkit-scrollbar-thumb {
				background: #cbd5e1;
				border-radius: 3px;
			}
			::-webkit-scrollbar-thumb:hover {
				background: #94a3b8;
			}
			/* Modal Animation */
			.modal {
				display: none;
				opacity: 0;
				transition: opacity 0.3s ease;
			}
			.modal.active {
				display: flex;
				opacity: 1;
			}
			.modal-content {
				transform: scale(0.9);
				transition: transform 0.3s ease;
			}
			.modal.active .modal-content {
				transform: scale(1);
			}
		</style>
	</head>

	<body class="bg-slate-50 text-slate-600 antialiased h-screen flex overflow-hidden">

		{% include 'admin/sidebar.html.twig' %}

		<main class="flex-1 flex flex-col h-screen overflow-hidden bg-slate-50">

			<header class="h-20 bg-white border-b border-slate-100 flex items-center justify-between px-8">
				<div class="flex items-center gap-4">
					<button class="md:hidden text-slate-500 hover:bg-slate-100 p-2 rounded-lg">
						<svg class="w-6 h-6" fill="none" stroke="currentColor" viewbox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
						</svg>
					</button>
					<h1 class="text-xl font-bold text-slate-800">Job Offers</h1>
				</div>

				<div class="flex items-center gap-6">
					<div class="flex items-center gap-3 pl-6 border-l border-slate-100">
						<div class="text-right hidden md:block">
							<div class="text-sm font-bold text-slate-800">{{ current_user.name }}</div>
							<div class="text-xs text-slate-400">Administrator</div>
						</div>
						<div class="h-10 w-10 rounded-full bg-indigo-100 border-2 border-white shadow-sm flex items-center justify-center text-indigo-700 font-bold">
							{{ current_user.name|slice(0,1)|upper }}
						</div>
					</div>
				</div>
			</header>

			<div class="flex-1 overflow-x-hidden overflow-y-auto p-8">

				{% if session.success is defined %}
					<div class="mb-6 rounded-xl border border-green-200 bg-green-50 px-6 py-4 text-sm text-green-700 flex items-center gap-3">
						<svg class="w-5 h-5" fill="none" stroke="currentColor" viewbox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
						</svg>
						{{ session.success }}
					</div>
				{% endif %}

				{% if session.error is defined %}
					<div class="mb-6 rounded-xl border border-red-200 bg-red-50 px-6 py-4 text-sm text-red-700 flex items-center gap-3">
						<svg class="w-5 h-5" fill="none" stroke="currentColor" viewbox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
						</svg>
						{{ session.error }}
					</div>
				{% endif %}

				<div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
					<div class="md:col-span-4">
						<h3 class="text-sm font-semibold text-slate-500 uppercase tracking-wider">Top Hiring Companies</h3>
					</div>

					{% for stat in stats %}
						<div class="bg-white p-5 rounded-2xl shadow-sm border border-slate-100 flex items-center justify-between transition hover:shadow-md">
							<div>
								<p class="text-sm font-medium text-slate-500">{{ stat.nom_entreprise }}</p>
								<p class="text-2xl font-bold text-slate-800">{{ stat.total_offres }} Jobs</p>
							</div>
							<div class="p-3 bg-indigo-50 text-indigo-600 rounded-xl">
								<svg class="w-6 h-6" fill="none" stroke="currentColor" viewbox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
								</svg>
							</div>
						</div>
					{% else %}
						<div class="col-span-4 p-4 bg-white rounded-xl border border-slate-100 text-center text-slate-400 italic">
							No statistics available yet.
						</div>
					{% endfor %}
				</div>

				<div class="bg-white rounded-2xl border border-slate-100 shadow-sm overflow-hidden">

					<div class="flex border-b border-slate-100 p-4 gap-2 overflow-x-auto">
						<a href="/admin/jobs?filter=all" class="px-4 py-2 rounded-lg text-sm font-medium transition-colors whitespace-nowrap {{ currentFilter == 'all' ? 'bg-slate-100 text-slate-900' : 'text-slate-500 hover:text-slate-700' }}">
							All Offers
						</a>
						<a href="/admin/jobs?filter=active" class="px-4 py-2 rounded-lg text-sm font-medium transition-colors whitespace-nowrap {{ currentFilter == 'active' ? 'bg-green-50 text-green-700' : 'text-slate-500 hover:text-slate-700' }}">
							Active Only
						</a>
						<a href="/admin/jobs?filter=archived" class="px-4 py-2 rounded-lg text-sm font-medium transition-colors whitespace-nowrap {{ currentFilter == 'archived' ? 'bg-red-50 text-red-700' : 'text-slate-500 hover:text-slate-700' }}">
							Archived
						</a>
					</div>

					<div class="overflow-x-auto">
						<table class="w-full text-left text-sm text-slate-600">
							<thead class="bg-slate-50 text-xs uppercase font-semibold text-slate-500">
								<tr>
									<th class="px-6 py-4">Job Title</th>
									<th class="px-6 py-4">Company</th>
									<th class="px-6 py-4">Category</th>
									<th class="px-6 py-4">Posted Date</th>
									<th class="px-6 py-4">Status</th>
									<th class="px-6 py-4 text-right">Actions</th>
								</tr>
							</thead>
							<tbody class="divide-y divide-slate-100">
								{% for offer in offers %}
									<tr class="hover:bg-slate-50/50 transition-colors">
										<td class="px-6 py-4">
											<div class="font-semibold text-slate-800">{{ offer.titre }}</div>
											<div class="text-xs text-slate-400">ID: #{{ offer.id }}</div>
										</td>
										<td class="px-6 py-4">
											<div class="flex items-center gap-2">
												<div class="w-8 h-8 rounded bg-slate-100 flex items-center justify-center text-xs font-bold text-slate-500 uppercase">
													{{ offer.nom_entreprise|slice(0, 1) }}
												</div>
												<div>
													<div class="font-medium text-slate-900">{{ offer.nom_entreprise }}</div>
													<div class="text-xs text-slate-400">by {{ offer.recruteur_nom }}</div>
												</div>
											</div>
										</td>
										<td class="px-6 py-4">
											<span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-indigo-50 text-indigo-700 border border-indigo-100">
												{{ offer.category_name }}
											</span>
										</td>
										<td class="px-6 py-4 text-slate-500">
											{{ offer.created_at|date('M d, Y') }}
										</td>
										<td class="px-6 py-4">
											{% if offer.deleted_at %}
												<span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-medium bg-red-50 text-red-700 border border-red-100">
													<span class="w-1.5 h-1.5 rounded-full bg-red-500"></span>
													Archived
												</span>
											{% else %}
												<span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-medium bg-green-50 text-green-700 border border-green-100">
													<span class="w-1.5 h-1.5 rounded-full bg-green-500"></span>
													Active
												</span>
											{% endif %}
										</td>
										<td class="px-6 py-4 text-right">
											<div class="flex items-center justify-end gap-2">
												{% if offer.deleted_at %}
													<button onclick="openRestoreModal({{ offer.id }}, '{{ offer.titre|e('js') }}')" class="px-3 py-1.5 text-sm text-green-600 hover:bg-green-50 rounded-lg font-medium transition-colors">
														Restore
													</button>
												{% else %}
													<a href="/admin/jobs/{{ offer.id }}/edit" class="px-3 py-1.5 text-sm text-blue-600 hover:bg-blue-50 rounded-lg font-medium transition-colors inline-flex items-center gap-1">
														<svg class="w-4 h-4" fill="none" stroke="currentColor" viewbox="0 0 24 24">
															<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
														</svg>
													</a>
													<button onclick="openArchiveModal({{ offer.id }}, '{{ offer.titre|e('js') }}')" class="px-3 py-1.5 text-sm text-amber-600 hover:bg-amber-50 rounded-lg font-medium transition-colors inline-flex items-center gap-1">
														<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-archive" viewbox="0 0 16 16">
															<path d="M0 2a1 1 0 0 1 1-1h14a1 1 0 0 1 1 1v2a1 1 0 0 1-1 1v7.5a2.5 2.5 0 0 1-2.5 2.5h-9A2.5 2.5 0 0 1 1 12.5V5a1 1 0 0 1-1-1zm2 3v7.5A1.5 1.5 0 0 0 3.5 14h9a1.5 1.5 0 0 0 1.5-1.5V5zm13-3H1v2h14zM5 7.5a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5"/>
														</svg>
													</button>
												{% endif %}
											</div>
										</td>
									</tr>
								{% else %}
									<tr>
										<td colspan="6" class="px-6 py-12 text-center text-slate-400 bg-slate-50/50">
											<div class="flex flex-col items-center">
												<svg class="w-8 h-8 mb-2 text-slate-300" fill="none" stroke="currentColor" viewbox="0 0 24 24">
													<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
												</svg>
												No offers found for this filter.
											</div>
										</td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</main>

		<!-- Archive Confirmation Modal -->
		<div id="archiveModal" class="modal fixed inset-0 bg-black bg-opacity-50 items-center justify-center z-50 p-4">
			<div class="modal-content bg-white rounded-2xl shadow-2xl max-w-md w-full">
				<div class="p-6">
					<div class="flex items-center justify-center w-12 h-12 mx-auto bg-amber-100 rounded-full mb-4">
						<svg class="w-6 h-6 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
						</svg>
					</div>
					<h3 class="text-lg font-bold text-slate-800 text-center mb-2">Archive Job Offer?</h3>
					<p class="text-sm text-slate-500 text-center mb-6">
						Are you sure you want to archive "<span id="archiveJobTitle" class="font-semibold text-slate-700"></span>"? This job will be hidden from active listings but can be restored later.
					</p>
					<div class="flex gap-3">
						<button onclick="closeArchiveModal()" class="flex-1 px-4 py-2.5 text-sm font-medium text-slate-600 bg-slate-100 hover:bg-slate-200 rounded-lg transition-colors">
							Cancel
						</button>
						<form id="archiveForm" method="POST" class="flex-1">
							<button type="submit" class="w-full px-4 py-2.5 text-sm font-medium text-white bg-amber-600 hover:bg-amber-700 rounded-lg transition-colors">
								Archive Job
							</button>
						</form>
					</div>
				</div>
			</div>
		</div>

		<!-- Restore Confirmation Modal -->
		<div id="restoreModal" class="modal fixed inset-0 bg-black bg-opacity-50 items-center justify-center z-50 p-4">
			<div class="modal-content bg-white rounded-2xl shadow-2xl max-w-md w-full">
				<div class="p-6">
					<div class="flex items-center justify-center w-12 h-12 mx-auto bg-green-100 rounded-full mb-4">
						<svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
						</svg>
					</div>
					<h3 class="text-lg font-bold text-slate-800 text-center mb-2">Restore Job Offer?</h3>
					<p class="text-sm text-slate-500 text-center mb-6">
						Are you sure you want to restore "<span id="restoreJobTitle" class="font-semibold text-slate-700"></span>"? This job will become active again.
					</p>
					<div class="flex gap-3">
						<button onclick="closeRestoreModal()" class="flex-1 px-4 py-2.5 text-sm font-medium text-slate-600 bg-slate-100 hover:bg-slate-200 rounded-lg transition-colors">
							Cancel
						</button>
						<form id="restoreForm" method="POST" class="flex-1">
							<button type="submit" class="w-full px-4 py-2.5 text-sm font-medium text-white bg-green-600 hover:bg-green-700 rounded-lg transition-colors">
								Restore Job
							</button>
						</form>
					</div>
				</div>
			</div>
		</div>

		<script>
			// Archive Modal Functions
			function openArchiveModal(id, title) {
				document.getElementById('archiveJobTitle').textContent = title;
				document.getElementById('archiveForm').action = '/admin/jobs/' + id + '/archive';
				document.getElementById('archiveModal').classList.add('active');
				document.body.style.overflow = 'hidden';
			}

			function closeArchiveModal() {
				document.getElementById('archiveModal').classList.remove('active');
				document.body.style.overflow = 'auto';
			}

			// Restore Modal Functions
			function openRestoreModal(id, title) {
				document.getElementById('restoreJobTitle').textContent = title;
				document.getElementById('restoreForm').action = '/admin/jobs/' + id + '/restore';
				document.getElementById('restoreModal').classList.add('active');
				document.body.style.overflow = 'hidden';
			}

			function closeRestoreModal() {
				document.getElementById('restoreModal').classList.remove('active');
				document.body.style.overflow = 'auto';
			}

			// Close modals on ESC key
			document.addEventListener('keydown', function(event) {
				if (event.key === 'Escape') {
					closeArchiveModal();
					closeRestoreModal();
				}
			});

			// Close modals when clicking outside
			document.getElementById('archiveModal').addEventListener('click', function(e) {
				if (e.target === this) {
					closeArchiveModal();
				}
			});

			document.getElementById('restoreModal').addEventListener('click', function(e) {
				if (e.target === this) {
					closeRestoreModal();
				}
			});
		</script>
	</body>
</html>